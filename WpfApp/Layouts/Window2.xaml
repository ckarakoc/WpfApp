<Window x:Class="WpfApp.Layouts.Window2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:WpfApp.Layouts"
        mc:Ignorable="d"
        Title="Window2" Height="400" Width="400">
    <ScrollViewer>
        <StackPanel>
            <Button>Button 1</Button>
            <Button>Button 2</Button>
            <Button>Button 3</Button>
            <StackPanel
                HorizontalAlignment="Center"
                Orientation="Horizontal">
                <Button>Button 1</Button>
                <Button>Button 2</Button>
                <Button>Button 3</Button>
            </StackPanel>
        
            <Button HorizontalAlignment="Center">Button 1</Button>
            <Button HorizontalAlignment="Right" VerticalAlignment="Bottom">Button 2</Button>
            <Button HorizontalAlignment="Left" VerticalAlignment="Stretch">Button 3</Button>
        </StackPanel>
    </ScrollViewer>
</Window>