<UserControl x:Class="WpfApp.UserControls.PostOperationsUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:WpfApp.UserControls"
             mc:Ignorable="d"
             d:DesignHeight="50" d:DesignWidth="550">
    <Grid>
        <StackPanel Orientation="Horizontal">
            <Image x:Name="Hearth"
                   Margin="8"
                   Source="/Icons/nolike.png"
                   Stretch="Uniform"
                   MouseDown="Hearth_OnMouseDown" />
            <Image
                Margin="8"
                Source="/Icons/comment.png"
                Stretch="Uniform" />
            <Image
                Margin="8"
                Source="/Icons/send.png"
                Stretch="Uniform" />
        </StackPanel>
        <Image Margin="8" Source="/Icons/bookmark.png" HorizontalAlignment="Right" />
    </Grid>
</UserControl>