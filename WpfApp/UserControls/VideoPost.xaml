<UserControl x:Class="WpfApp.UserControls.VideoPost"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:WpfApp.UserControls"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <StackPanel>
        <ContentControl MouseDoubleClick="Control_OnMouseDoubleClick">
            <MediaElement x:Name="VideoPlayer" Stretch="UniformToFill" />
        </ContentControl>
        <local:PostOperationsUC x:Name="PostOps" Height="40" />
        <local:PostLikedBy />
    </StackPanel>
</UserControl>