<Window x:Class="WpfApp.Other.Window4"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:WpfApp.Other"
        mc:Ignorable="d"
        Title="Window4" Height="450" Width="800">
    <StackPanel>
        <StackPanel Orientation="Horizontal">
            <Button x:Name="Odd" Click="Odd_Click">Filter odd numbers</Button>
            <Button x:Name="Even" Click="Even_Click">Filter even numbers</Button>
            <Button x:Name="RemoveFilter" Click="RemoveFilter_Click">Remove Filter</Button>
            <Button x:Name="Asc" Click="Asc_OnClick">Sort Asc</Button>
            <Button x:Name="Desc" Click="Desc_OnClick">Sort Desc</Button>
        </StackPanel>
        <TextBlock x:Name="MyTextBlock" />
    </StackPanel>
</Window>