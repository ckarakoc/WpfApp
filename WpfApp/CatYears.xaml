<Window x:Class="WpfApp.CatYears"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:WpfApp"
        mc:Ignorable="d"
        Title="CatYears" Height="450" Width="800">
    <StackPanel>
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="How old is your cat? (years)" FontSize="18" />
            <TextBox x:Name="InputCatAge" Width="120" Margin="5,0,0,0" TextAlignment="Center" FontSize="16"
                       Background="SlateGray"
                       KeyDown="InputCatAge_OnKeyDown" />
        </StackPanel>
        <TextBlock Name="ResultTextBlock" Text="Your cat is" FontSize="18"></TextBlock>
        <Image Source="Images/Cat.jpg" />
    </StackPanel>
</Window>