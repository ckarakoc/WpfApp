<UserControl x:Class="WpfApp.Nav.UserControl1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:WpfApp.Nav"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <StackPanel>
        <StackPanel Orientation="Horizontal">
            <Button Width="80" Height="60" Click="MinButton_OnClick" Content="-10"/>
            <Button Width="80" Height="60" Click="PlusButton_OnClick" Content="+10"/>
        </StackPanel>
        <Border Width="160" BorderThickness="2" BorderBrush="Black" HorizontalAlignment="Left"/>
        <TextBox x:Name="ValueLabel" 
                 HorizontalAlignment="Left"
                 TextAlignment="Center"
                 TextChanged="ValueLabel_OnTextChanged" 
                 Width="160" Height="40" FontSize="20" Text="50"/>
    </StackPanel>
</UserControl>
